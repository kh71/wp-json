{
  "compilerOptions": {
    "module": "CommonJs",
    "moduleResolution": "node",
    "pretty": true,
    "declaration": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "types": [
      "node"
    ],
    "target": "es2019",
    "lib": [
      "es2019",
    ],
    "outDir": "./dist",
    "baseUrl": "./src"
  },
  "esModuleInterop": true,
  "allowSyntheticDefaultImports": true,
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist"
  ]
}